{
	"name": "@drunkcod/promise-result",
	"type": "module",
	"version": "0.0.7",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"description": "Promise.result because, yeah.",
	"files": [
		"lib/**/*",
		"!lib/**/*.spec.*"
	],
	"exports": {
		".": {
			"import": {
				"default": "./lib/index.js",
				"types": "./lib/index.d.ts"
			},
			"require": {
				"default": "./lib/cjs/index.js",
				"types": "./lib/cjs/index.d.ts"
			}
		},
		"./result": {
			"import": {
				"default": "./lib/result.js",
				"types": "./lib/result.d.ts"
			},
			"require": {
				"default": "./lib/cjs/result.js",
				"types": "./lib/cjs/result.d.ts"
			}
		}
	},
	"scripts": {
		"clean": "rimraf lib",
		"compile": "tsc",
		"cjs:compile": "tsc --module commonjs --outdir lib/cjs",
		"cjs:fixup": "echo '{\"type\": \"commonjs\"}' > lib/cjs/package.json",
		"build": "npm-run-all clean -p compile cjs:compile -s cjs:fixup --silent",
		"test:type-check": "tsc --project tsconfig.test.json",
		"test:jest": "node --experimental-vm-modules --disable-warning=ExperimentalWarning node_modules/jest/bin/jest.js",
		"test": "npm-run-all test:type-check test:jest --silent"
	},
	"keywords": [
		"Promise",
		"async"
	],
	"author": "Tobbe Gyllebring",
	"license": "MIT",
	"devDependencies": {
		"@babel/preset-typescript": "^7.28.5",
		"@drunkcod/ts-jest-esm": "^0.0.3",
		"@jest/globals": "^30.0.0",
		"@types/node": "^24.9.2",
		"jest": "^30.2.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.6.2",
		"rimraf": "^6.1.0",
		"ts-jest": "^29.4.5",
		"typescript": "^5.9.3"
	}
}
